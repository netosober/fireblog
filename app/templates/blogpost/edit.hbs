<form role="form">
  <div class="form-group">
		<label for="title">Title</label >
  	{{input value=title size="50" class="form-control"}}
 	</div>
	<div class="form-group">
		<label for="publishedDate">Published Date</label >
  	{{input type="date" value=publishedDate class="form-control"}}
 	</div>
	<div class="form-group">
		<div class="row">
			<div class="col-md-6">
				<label for="body">Body</label >
	  		{{textarea value=body class="form-control" rows="30"}}
	  	</div>
	  	<div class="col-md-6">
	  		<label>Preview</label>
	  		{{markdown body}}
	  	</div>
  	</div>
	</div>
	<button type="submit" {{action 'saveChanges'}} class="btn btn-default">Submit</button>
	<a class="btn btn-default cancel" {{action 'cancel'}} href="#">Cancel</a>
</form>